<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_editarProductora"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarProductora">

    <EditText
        android:id="@+id/inp_idEditarProductora"
        android:layout_width="234dp"
        android:layout_height="58dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Ingresa el ID"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/inp_editarNombreProd"
        app:layout_constraintEnd_toEndOf="@+id/inp_editarNombreProd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inp_editarNombreProd" />

    <EditText
        android:id="@+id/inp_editarNombreProd"
        android:layout_width="232dp"
        android:layout_height="61dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Ingresa el nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/inp_editarFundador"
        app:layout_constraintEnd_toEndOf="@+id/inp_editarFundador"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="@+id/inp_editarFundador" />

    <EditText
        android:id="@+id/inp_editarFundador"
        android:layout_width="241dp"
        android:layout_height="54dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Ingrese el fundador"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/inp_editarCantComics"
        app:layout_constraintEnd_toEndOf="@+id/inp_editarCantComics"
        app:layout_constraintStart_toStartOf="@+id/inp_editarCantComics" />

    <EditText
        android:id="@+id/inp_editarCantComics"
        android:layout_width="223dp"
        android:layout_height="65dp"
        android:ems="10"
        android:hint="Ingresa la cant. Comics"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

    <Button
        android:id="@+id/btn_cancelar_editarProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_editar_productora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inp_editarCantComics" />

    <TextView
        android:id="@+id/tv_editarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Productora de Comics"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

</androidx.constraintlayout.widget.ConstraintLayout>